<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fr3ts0n.ecu.gui.androbd"
    android:versionCode="20614"
    android:versionName="V2.6.14" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="25" />
    <!-- start/stop bluetooth adapter -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- connect/disconnect bluetooth devices -->
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- to keep Bluetooth measurement running even when screen is inactive -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- allow saving screenshots -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- allow saving screenshots -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- allow access to WIFI adapter -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- to allow service to open windows / start Activities -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <queries>

        <!-- Search for plugins -->
        <intent>
            <action android:name="com.fr3ts0n.androbd.plugin.IDENTIFY" />
        </intent>
    </queries>

    <permission
        android:name="com.fr3ts0n.ecu.gui.androbd.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.fr3ts0n.ecu.gui.androbd.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:description="@string/app_description"
        android:extractNativeLibs="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme.Dark" >
        <activity
            android:name="com.fr3ts0n.ecu.gui.androbd.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity
            android:name="com.fr3ts0n.ecu.gui.androbd.UsbDeviceListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/select_device" />
        <activity
            android:name="com.fr3ts0n.ecu.gui.androbd.BtDeviceListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/select_device" />
        <activity
            android:name="com.fr3ts0n.ecu.gui.androbd.ChartActivity"
            android:configChanges="touchscreen|orientation|screenSize"
            android:label="@string/chart" />
        <activity
            android:name="com.fr3ts0n.ecu.gui.androbd.DashBoardActivity"
            android:configChanges="touchscreen|orientation|screenSize"
            android:label="@string/dashboard" />
        <activity
            android:name="com.fr3ts0n.ecu.gui.androbd.SettingsActivity"
            android:configChanges="touchscreen|orientation|screenSize"
            android:label="@string/settings" />
        <activity
            android:name="com.fr3ts0n.ecu.gui.androbd.PidCustomization"
            android:configChanges="touchscreen|orientation|screenSize"
            android:label="@string/customize_display" />

        <service android:name="com.fr3ts0n.ecu.gui.androbd.BtDeviceConnectService" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.fr3ts0n.ecu.gui.androbd.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <service
            android:name="com.fr3ts0n.androbd.plugin.mgr.PluginDataService"
            android:exported="true" >
        </service>
    </application>

</manifest>